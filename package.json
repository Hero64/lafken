{
  "name": "lafken",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "changeset:release": "turbo run build && pnpm -r publish --access public --no-git-checks",
    "changeset:version": "changeset version && pnpm install",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "pnpm biome format --write . ",
    "lint": "turbo run lint",
    "modules:clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf {} +",
    "prepare": "husky",
    "test": "turbo run test --concurrency=4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@types/node": "25.0.3",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "turbo": "2.8.8",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20.19"
  },
  "packageManager": "pnpm@10.29.3"
}
